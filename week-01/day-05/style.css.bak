body {
	padding: 50px;
	font-family: Times New Roman;
}


.container {
	width: 800px;
	height: 1000px;
	background: #DCD6CD;
	box-sizing: border-box;
	padding: 100px 60px 100px 60px;
}

div {
	display: inline-block;
	margin:0;
	box-sizing: border-box;
}
.half {
	width: 49%;
	padding:10px;
	vertical-align: top;
}

.full {
	width: 100%;
	padding:10px;
	vertical-align: top;
}
.header {
	padding: 10px;
	margin-bottom: 10px;
	border: 0;
	border-radius: 2px;
	text-decoration: none;
	background: #938C97;
	color: #fff;
	width: 100%;
	font-size: 18px;
	font-family: Consolas;
}
.input {
	width: 100%;
	height: 30px;
	margin-top: 5px;
}

.red-star {
	color: red;
	text-align: left;
}
.inside {
	padding: 0;
	margin-top: 5px;
}
article {
	margin-bottom: 10px;
}
#year {
	width: 80px;
}
p {
	color: #cc9900;
}
#profil {
	font-size: 24px;
}
.space {
	line-height: 145%;
}
.button {
	text-transform: uppercase;
	padding: 7px; 
	width: 40%;
	font-size: 18px;
	font-family: Consolas;
}
.textdecor {
	text-decoration: underline;
}
.save {
	text-transform: uppercase;
	padding: 10px;
	width: 85%;
	font-size: 18px;
	background: #4C4463;
	font-family: Consolas;
}
.delete	{
	width: 70%;
}
.right {
	text-align: right;
}

input[type="checkbox"]{
  width: 30px; /*Desired width*/
  height: 30px; /*Desired height*/
}